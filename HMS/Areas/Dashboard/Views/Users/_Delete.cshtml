
@model HMS.Areas.Dashboard.ViewModel.AccomodationActionModel
@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                <span> Delete Accomodation </span>
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <input type="hidden" name="ID" value="@Model.ID" />
                <div class="alert alert-danger" role="alert">
                    Are You Sure You want to Delete This Accomodation  ?
                </div>
                <div class="errorDiv"></div>
            </form>
        </div>
        <div class="modal-footer">
            <button id="actionButton" type="button" class="btn btn-primary">
                <i class="fas fa-trash-alt mr-1"></i>Delete
            </button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                <i class="fas fa-times mr-1"></i>Close
            </button>

        </div>
    </div>
}
<script>
    $("#actionButton").click(function(){
        $.ajax({
            type:"post",
            url: '@Url.Action("Delete","Accomodations")',
            data: $("#actionForm").serialize()
        })
            .done(function (response) {
                if (response.Success) {
                    window.location.href = "@Url.Action("Index", "Accomodations")";
                }
                else {
                    $("#errorDiv").html(response.Message);
                }
            })

    });
</script>
